{
  "name": "blogs",
  "version": "1.0.0",
  "description": "Full stack application with client and server",
  "private": true,
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development nodemon server/index.js",
    "test:server": "cross-env NODE_ENV=test node --test server/tests",
    "dev:client": "vite",
    "test:client": "vitest run",
    "test:e2e": "npx playwright test tests/playwright",
    "test:report": "playwright show-report",
    "test": "npm run test:server && npm run test:client && npm run test:e2e",
    "lint": "eslint . --ext .js,.jsx --report-unused-disable-directives --max-warnings 0",

    "build:client": "vite build",
    "build:ui": "npm run build:client && cd client && cp -r dist ../",
    "deploy:full": "npm run build:ui && git add . && git commit -m 'Deploy build' && git push"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.1",
    "redux": "^5.0.1",
    "styled-components": "^6.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@playwright/test": "^1.48.0",
    "@stylistic/eslint-plugin-js": "^2.9.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.7.5",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "jsdom": "^24.1.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "vite": "^4.4.5",
    "vitest": "^2.0.5"
  }
}
